mixin sBlog(data)
	// start sBlog
	+b.SECTION.sBlog.section#sBlog&attributes(attributes)
		.container
			+sectionTitle('Blog')
			+e.swiper--js
				+e.row.row.swiper-wrapper
					+e.col.col-lg-4.swiper-slide
						+blogCard(1, "Silicone toothbrush Dr. Brown's for babies")
					+e.col.col-lg-4.swiper-slide
						+blogCard(2, "Silicone toothbrush Dr. Brolicone toothbrush Dr. Brown's for babies")
					+e.col.col-lg-4.swiper-slide
						+blogCard(3, "Silicone toothbrush Dr. Brown's for babies")
					+e.col.col-lg-4.swiper-slide
						+blogCard(4, "Silicone toothbrush Dr. Brown's for babies")
					+e.col.col-lg-4.swiper-slide
						+blogCard(5, "Silicone toothbrush Dr. Brown's for babies")
	// end sBlog

mixin blogCard(i, title)
	+b.blog-card(href='#')
		+e.img-wrap: +img(`img/sBlog-${i}.png`).img-bg
		+e.wrap
			+e.title.title.ls-4= title
			+e.bottom.ls-6
				.text.fw-700.text-purple.left-line Read more
				.date.text-disabled 12.07.2020
			+linksCard
