					.num 168
				+in-c1('checkbox', 'For girls')
					.num 34
		+e.btns-wrap
			+e.btn.btn.btn-primary.show-all.BUTTON Show all
			+e.btn.btn.btn-outline-primary.show-all.BUTTON Clear filter
