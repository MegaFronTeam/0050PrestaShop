mixin sCatalogSidebar()
	+b.sidebar--js
		+ddGroup.mb-24
			+ddGroupItem('Category', 'active')
				+in-c1('checkbox', 'LEGO')(checked)
					.num 168
				+in-c1('checkbox', 'Block')
					.num 34
				+in-c1('checkbox', 'Wooden')(checked)
					.num 168
				+in-c1('checkbox', 'Electronic')
					.num 31
				+in-c1('checkbox', 'Magnetic')
					.num 168
				+in-c1('checkbox', 'Metal')
					.num 168
				+in-c1('checkbox', 'Glowing')(disabled)
					.num 0
				+in-c1('checkbox', 'Sets')
					.num 5
				+e.btn.btn.btn-primary.show-all.BUTTON Show all
		+ddGroup.mb-24
			+ddGroupItem('Brand')
				+in-c1('checkbox', 'LEGO')(checked)
					.num 168
				+in-c1('checkbox', 'LEGO2')
					.num 34
				+in-c1('checkbox', 'Wooden')(checked)
					.num 168
				+in-c1('checkbox', 'Electronic')
					.num 31
				+in-c1('checkbox', 'Magnetic')
					.num 168
		+ddGroup.mb-24
			+ddGroupItem('Price, € ', 'active')
				+range(10,599)
			+ddGroupItem('Ages', 'active')
				+range(0,15)
			+ddGroupItem('Discount', 'active')
				+in-c1('checkbox', 'Discount')(checked)
			+ddGroupItem('Rating', 'active')
				+in-c1('radio', '')(checked)
					.reviews__stars(data-star=5)
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
					.num 168
				+in-c1('radio', '')
					.reviews__stars(data-star=4)
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
					.num 5
				+in-c1('radio', '')
					.reviews__stars(data-star=3)
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
					.num 12
				+in-c1('radio', '')(disabled)
					.reviews__stars(data-star=2)
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
					.num 0
				+in-c1('radio', '')
					.reviews__stars(data-star=1)
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
						+icon('star')
					.num 12
				+in-c1('radio', 'Any')
