mixin shippingMethod(img, title, text, price, hint)
	+b.shipping-method
		+in-c('radio', title, 'text1')
			.wrapper
				span.custom-input__text.form-check-label= title
				if img
					+img(`img/svg/ship-${img}.svg`)
			.deliv= text
			.price= price
			if hint
				.total-card__sub Taxes included


