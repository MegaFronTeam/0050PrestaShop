mixin topCheckout
	+e.top
		h3 Checkout
		ul
			li: a(href='#')
				+icon('delivery')
				| Delivery policy
			li: a(href='#')
				+icon('return')
				| Return policy

mixin titleCheckout(t, isFirst, notLoggenIn, filled)
	+b.checkout-item&attributes(attributes)
		.title-wrap
			.checkout-title= t
			if isFirst && notLoggenIn
				.part.small
					+e.item-link(href='#').active
						+icon('guest')
						| Order as a guest
					+e.item-link(href='#')
						+icon('login')
						| Log In
			if filled
				.part.small
					+e.item-link(href='#')
						+icon('edit')
						| Edit
		if block
			.checkout-content
				block

