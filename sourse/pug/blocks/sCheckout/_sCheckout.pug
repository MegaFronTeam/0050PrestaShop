mixin sCheckout(data)
	// start sCheckout
	+b.SECTION.sCheckout.section#sCheckout&attributes(attributes)
		.container
			.inner-bg
				+breadcrumb1('Checkout')
				+topCheckout
				+e.row.row
					.col-lg-8
						.inner-wrap
							+titleCheckout('Personal information', 'first', 'notLoggedIn').active
								+form-wrap
									.form-group
										label
											span.checkout-item__input-title Social title
											.wrap
												+in-c('radio','Mr.')(checked)
												+in-c('radio','Mrs.')
									+input('Enter your first name', 'text', 'First name')
									+input('Enter your last name', 'text', 'Last name')
									+input('Enter your Email', 'email', 'Email')
									.form-group
										.title.fw-700 Create an account
										.hint.hint-it.ml-0 And save time on your next order!
									+input('Enter your password', 'password', 'Password')
										.hint Use only letters and numbers
									+input('Birthdate', 'date', 'Birthdate')
										.hint.hint-title.d-none.d-md-block Optional
										.hint (E.g.: 05/31/1970)
									.order-l
										+in-c1('checkbox', 'Receive offers from our partners')(checked)
										+in-c1('checkbox', 'Sign up for our newsletter')
										.hint.hint-it.ml You may unsubscribe at any moment. For that purpose, please find our contact info in the legal notice.
										+policy()
										+e.btn.BUTTON.btn.btn-secondary(type="submit") Save
							+titleCheckout('Address', false, false ).filled
							+titleCheckout('Shipping method', false, false )
							+titleCheckout('Payment', false, false )
					.col-lg-4
						+card-aside2
	// end sCheckout

